<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  <br>
  <% end %>
  <%= cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill) %>
</ul>

<%= link_to 'Back to list', cocktails_path %>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
